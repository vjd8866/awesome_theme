<odoo>
    <data>

        <record model="ir.ui.view" id="anita_theme_setting.theme_var_form">
            <field name="name">theme style item</field>
            <field name="model">anita_theme_setting.theme_var</field>
            <field name="arch" type="xml">
                <form>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="style_item">style_item</label>
                        <div class="col-sm-10">
                            <field name="style_item" readonly="1" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="sequence">sequence</label>
                        <div class="col-sm-10">
                            <field name="sequence" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="type">type</label>
                        <div class="col-sm-10">
                            <field name="type" />
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name" readonly="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="color">color</label>
                        <div class="col-sm-10">
                            <field name="color"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'color')]}">
                        <label class="col-sm-2 col-form-label" for="color_type">color_type</label>
                        <div class="col-sm-10">
                            <field name="color_type"/>
                        </div>
                    </div>

                    <!-- disable_opacity -->
                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'color')]}">
                        <label class="col-sm-2 col-form-label" for="disable_opacity">disable_opacity</label>
                        <div class="col-sm-10">
                            <field name="disable_opacity"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="image">image</label>
                        <div class="col-sm-10">
                            <field name="image" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="image_url">image_url</label>
                        <div class="col-sm-10">
                            <field name="image_url"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="svg">svg</label>
                        <div class="col-sm-10">
                            <field name="svg"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="identity">identity</label>
                        <div class="col-sm-10">
                            <field name="identity" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="is_default">is_default</label>
                        <div class="col-sm-10">
                            <field name="is_default" required="1"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-primary" special="save_and_return" text="save" />
                        <button class="btn btn-secondary" text="cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="anita_theme_setting.edit_theme_var_form">
            <field name="name">theme var</field>
            <field name="model">anita_theme_setting.theme_var</field>
            <field name="arch" type="xml">
                <form>

                    <field name="style_item" invisible="1" />
                    <field name="type" invisible="1" />

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="name">name</label>
                        <div class="col-sm-10">
                            <field name="name"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'color')]}">
                        <label class="col-sm-2 col-form-label" for="color">color</label>
                        <div class="col-sm-10">
                            <field name="color"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'image')]}">
                        <label class="col-sm-2 col-form-label" for="image">image</label>
                        <div class="col-sm-10">
                            <field name="image" required="1"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'image_url')]}">
                        <label class="col-sm-2 col-form-label" for="image_url">image_url</label>
                        <div class="col-sm-10">
                            <field name="image_url"/>
                        </div>
                    </div>

                    <div class="form-group row" attrs="{'invisible': [('type', '!=', 'svg')]}">
                        <label class="col-sm-2 col-form-label" for="svg">svg</label>
                        <div class="col-sm-10">
                            <field name="svg"/>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label" for="identity">identity</label>
                        <div class="col-sm-10">
                            <field name="identity" required="1"/>
                        </div>
                    </div>

                    <footer>
                        <button class="btn btn-primary" special="save_and_return" text="save" />
                        <button class="btn btn-secondary" text="cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window"
                id="anita_theme_setting.theme_var_act_window">
            <field name="name">theme var</field>
            <field name="res_model">anita_theme_setting.theme_var</field>
            <field name="view_mode">tree,form</field>
        </record>

    </data>
</odoo>
    